{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npx prisma generate && npx prisma migrate deploy && npm run build"
    },
    "deploy": {
        "startCommand": "node dist/main",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
